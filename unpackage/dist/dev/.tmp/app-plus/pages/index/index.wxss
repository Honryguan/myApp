.carousel {
	width: 100%;
	height: 440rpx;
}

/* 热门潮音预告 start */
.super-hot {
	margin-top: 12rpx;
	padding: 20rpx;
}
.hot-title-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.hot-ico {
	width: 30rpx;
	height: 30rpx;
	margin-top: 15rpx;
}
.hot-title {
	font-size: 20px;
	margin-left: 20rpx;
	font-weight: bold;
}

/* 滚动条 */
.hot {
	width: 100%;
	white-space: nowrap;
}
.single-poster {
	display: inline-block;
	margin-left: 20rpx;
}
.poster_wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.poster {
	width: 200rpx;
	height: 270rpx;
}
.movie-name {
	width: 200rpx;
	margin-top: 10rpx;
	font-size: 14px;
	font-weight: bold;
	/* name超出省略 */
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.movie-score-wapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.star-ico{
	width: 20rpx;
	height: 20rpx;
	margin-top: 6rpx;
}
.move-score{
	font-size: 12rpx;
	color: grey;
	margin-left: 8rpx;
}

/* 热门预告 */
.hot-movies{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
